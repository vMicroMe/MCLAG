
{% for name, node in ospf.items() %}
{% if inventory_hostname ==  name %}
protocols {
   ospf {
     {% for nm, ar in node.items() %}
     area {{ar.nmbr}} { 
       {% for intf in ar.intf %}
       interface {{intf}}; 
       {% endfor %}
      }
     {% endfor %}
   }
 }
{% endif %}
{% endfor %}
{% if NSB is defined %}
  {% for node in NSB %}
     {% if node == inventory_hostname %}
   protocols {
    layer2-control{
     nonstop-bridging;
  }
 }
     {% endif %}
  {% endfor %}
{% endif %}

{% if NSR is defined %}

  {% for node in NSR %}
     {% if node == inventory_hostname %}
   routing-options{
   
     nonstop-routing;
  
 }
     {% endif %}
  {% endfor %}

{% endif %}



